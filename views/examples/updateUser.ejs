    <!-- Page content -->
    <div class="container-fluid mt--6">
      <div class="row">
        <div class="col-xl-12 order-xl-1">
          <div class="card">
            <div class="card-header">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Update profile </h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form action="/admin/updateUser" method="POST">
                <h6 class="heading-small text-muted mb-4">Update information</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6" style="display: none;">
                      <div class="form-group">
                        <label class="form-control-label" for="input-id">ID</label>
                        <input name="id" required type="text" id="input-id" class="form-control" placeholder="Id" value="<%= userInfo %>">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-new-username">Name</label>
                        <input name="newName" type="text" id="input-new-username" class="form-control" placeholder="Username">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-new-email">Email address</label>
                        <input name="newEmail" type="email" id="input-new-email" class="form-control" placeholder="abc@gmail.com">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-new-position">Position</label>
                        <input name="newPosition" type="text" id="input-new-position" class="form-control" placeholder="Marketing manager etc.." >
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-new-department">Department</label>
                        <input name="newDepartment" type="text" id="input-new-department" class="form-control" placeholder="Marketing etc..">
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Address -->
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-md-12">
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-new-birthday">Birthday</label>
                        <input name="newBirthday" type="date" id="input-new-birthday" class="form-control" placeholder="City" value="New York">
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-new-phonenumber">Phone number</label>
                        <input name="newPhonenumber" type="text" id="input-new-phonenumber" class="form-control" placeholder="+84">
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-new-password">Password</label>
                        <input name="newPassword" type="text" id="input-new-password" class="form-control" placeholder="******">
                      </div>
                    </div>
                  </div>
                </div>
                <!-- button submit -->
                <div class="col-12 text-right">
                  <button type="submit" class="btn btn-sm btn-primary">Update</button>
                </div>
              </form>
